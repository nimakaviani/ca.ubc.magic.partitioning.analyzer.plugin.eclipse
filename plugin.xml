<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="snapshots.views.SnapshotView"
            icon="icons/jip-logo-90.gif"
            id="plugin.views.snapshot_view"
            name="Snapshot View">
      </view>
      <view
            class="partitioner.views.ModelView"
            icon="icons/sample.gif"
            id="plugin.views.model_view"
            name="Model View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="partitioner.views.ModelCreationEditor"
            contributorClass="partitioner.views.ModelCreationEditorContributor"
            default="false"
            id="plugin.views.model_creation_editor"
            name="Model Creation Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="plugin.AnalysisPerspectiveFactory"
            fixed="false"
            id="plugin.AnalysisPerspective"
            name="Analysis Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:plugin.views.snapshot_view">
         <command
               commandId="plugin.ClearFolders"
               id="ClearFolders"
               style="push">
         </command>
         <command
               commandId="plugin.RemoveSnapshotFolder"
               id="RemoveSnapshotsFolder"
               style="push">
         </command>
         <command
               commandId="plugin.addSnapshotFolder"
               id="AddSnapshotFolder"
               style="push">
         </command>
         <command
               commandId="plugin.RemoveModel"
               id="RemoveModel"
               style="push">
            <visibleWhen
                  checkEnabled="true">
               <and>
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                  </with>
                  <iterate
                        ifEmpty="false"
                        operator="and">
                     <instanceof
                           value="snapshots.views.VirtualModelFileInput">
                     </instanceof>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar id="ca.ubc.magic.partitioning.analyzer.plugin.eclipse.analysis_toolbar">
            <command
                  commandId="ca.ubc.magic.partitioning.analyzer.plugin.eclipse.MouseMode"
                  icon="icons/mouse2.png"
                  id="MouseMode"
                  label="MouseMode"
                  style="pulldown">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="menu:plugin.addSnapshotFolder">
         <command
               commandId="ca.ubc.magic.partitioning.analyzer.plugin.eclipse.command7"
               id="Picking"
               style="push">
         </command>
         <command
               commandId="ca.ubc.magic.partitioning.analyzer.plugin.eclipse.transforming"
               id="Transforming"
               style="push">
         </command>
      </menuContribution>
   </extension>
   
   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="addSnapshotFolder"
            commandId="plugin.addSnapshotFolder">
      </handler>
      <handler
            class="RemoveSnapshotFolder"
            commandId="plugin.RemoveSnapshotFolder">
      </handler>
      <handler
            class="ClearFolders"
            commandId="plugin.ClearFolders">
      </handler>
      <handler
            class="RemoveModel"
            commandId="plugin.RemoveModel">
      </handler>
      <handler
            class="addSnapshotFolder"
            commandId="ca.ubc.magic.partitioning.analyzer.plugin.eclipse.MouseMode">
      </handler>
      <handler
            class="addSnapshotFolder"
            commandId="ca.ubc.magic.partitioning.analyzer.plugin.eclipse.transforming">
      </handler>
      <handler
            class="addSnapshotFolder"
            commandId="ca.ubc.magic.partitioning.analyzer.plugin.eclipse.picking">
      </handler>
   </extension>
   
   
   <extension point="org.eclipse.ui.commands">
      <command
            id="plugin.addSnapshotFolder"
            name="Add Snapshot Folder">
      </command>
      <command
            id="plugin.RemoveSnapshotFolder"
            name="Remove Folder">
      </command>
      <command
            id="plugin.ClearFolders"
            name="Clear Contents">
      </command>
      <command
            id="ca.ubc.magic.partitioning.analyzer.plugin.eclipse.MouseMode"
            name="Set Mouse Mode">
      </command>
      <command
            id="ca.ubc.magic.partitioning.analyzer.plugin.eclipse.transforming"
            name="Transforming">
      </command>
      <command
            id="ca.ubc.magic.partitioning.analyzer.plugin.eclipse.picking"
            name="Picking">
      </command>
      <command
            id="plugin.RemoveModel"
            name="Remove Model">
      </command>
   </extension>
</plugin>
